{
	"name": "url-shortener",
	"version": "0.0.1",
	"private": true,
	"main": "src/index.mjs",
	"type": "module",
	"scripts": {
		"start": "wrangler dev --https-cert-path certs/server.crt --https-key-path certs/server.key",
		"generate:types": "wrangler types src/env.d.ts",
		"deploy:prod": "wrangler deploy --minify --env production",
		"format": "dprint fmt --staged",
		"typecheck": "tsc --noEmit",
		"lint:js": "eslint",
		"lint": "npm run typecheck && npm run lint:js"
	},
	"author": "madcampos",
	"license": "MIT",
	"description": "A URL shortener",
	"volta": {
		"node": "22.15.0"
	},
	"devDependencies": {
		"@types/wicg-file-system-access": "2023.10.6",
		"@typescript-eslint/eslint-plugin": "8.32.0",
		"@typescript-eslint/parser": "8.32.0",
		"dprint": "0.49.1",
		"eslint": "9.26.0",
		"globals": "16.1.0",
		"typescript": "5.8.3",
		"wrangler": "4.14.3"
	}
}
